<div>
  <h1 class="text-center">COMPRAS</h1>
  <ul class="menu align-right">
    <li><%= link_to "Borrar todas", purchases_path(delete: "all"), data: {confirm: "seguor?"} %></li>
    <li><%= link_to "Descargar PLE (080100) #{@purchases.where(no_domiciliado: false).count}", purchases_path(format: :txt, type: "080100"), target: "_blank" %></li>
    <li><%= link_to "Descargar PLE (080200) #{@purchases.where(no_domiciliado: true).count}", purchases_path(format: :txt, type: "080200"), target: "_blank" %></li>
    <% if false %>
        <li><%= link_to "Descargar PLE (080300)", purchases_path(format: :txt, type: "080300"), target: "_blank" %></li>
    <% end %>
  </ul>
  <hr>
  <fieldset class="fieldset">
    <legend>Subir compras</legend>
    <%= form_tag subir_excel_purchase_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Subir el EXCEL", class: "button expand margin-none", name: "upload" %>
    <% end %>
  </fieldset>
  <hr>
  <div>
    <table>
      <tr>
        <th>ruc</th>
        <th>year</th>
        <th>month</th>
        <th>periodo</th>
        <th>cuo</th>
        <th>correlativo</th>
        <th>fecha_emision</th>
        <th>fecha_vencimiento</th>
        <th>tipo_comprobante</th>
        <th>serie</th>
        <th>anho_dua_dsi</th>
        <th>numero</th>
        <th>numero_final</th>
        <th>tipo_documento</th>
        <th>numero_ruc</th>
        <th>denominacion</th>
        <th>base_gravada_1</th>
        <th>igv_1</th>
        <th>base_gravada_2</th>
        <th>igv_2</th>
        <th>base_gravada_3</th>
        <th>igv_3</th>
        <th>no_gravadas</th>
        <th>isc</th>
        <th>otros</th>
        <th>total</th>
        <th>codigo_moneda</th>
        <th>tipo_cambio</th>
        <th>fecha_comprobante_modificado</th>
        <th>tipo_comprobante_modificado</th>
        <th>serie_comprobante_modificado</th>
        <th>codigo_dependencia_aduanas_modificado</th>
        <th>numero_comprobante_modificado</th>
        <th>fecha_emision_constancia_detraccion</th>
        <th>numero_constancia_detraccion</th>
        <th>comprobante_pago_sujeto_a_retencion</th>
        <th>clasificacion_de_bienes_adquiridos</th>
        <th>identificacion_contrato_proyecto</th>
        <th>inconsistencia_tipo_de_cambio</th>
        <th>inconsistencia_proveedor_no_habidos</th>
        <th>inconsistencia_proveedor_renucias</th>
        <th>inconsistecia_por_dni</th>
        <th>indicador_de_bancarizacion</th>
        <th>estado_oportunidad_de_anotacion</th>
        <th>no_domiciliado</th>
        <th>no_domiciliado_pais</th>
        <th>no_domiciliado_denominacion</th>
        <th>no_domiciliado_domicilio</th>
        <th>no_domiciliado_identificacion</th>
        <th>no_domiciliado_tipo_de_renta</th>
      </tr>
      <% @purchases.each do |purchase| %>
          <tr>
            <td><%= purchase.ruc %></td>
            <td><%= purchase.year %></td>
            <td><%= purchase.month %></td>
            <td><%= purchase.periodo %></td>
            <td><%= purchase.cuo %></td>
            <td><%= purchase.correlativo %></td>
            <td><%= purchase.fecha_emision %></td>
            <td><%= purchase.fecha_vencimiento %></td>
